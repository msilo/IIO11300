<Window x:Class="IIO11300HT_Siloaho.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IIO11300HT_Siloaho"
        mc:Ignorable="d"
        Title="KokkiMikko" Height="350" Width="525">
    <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="2*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*" />
      <RowDefinition Height="2*" />
      <RowDefinition Height="25" />
    </Grid.RowDefinitions>
    
    <!-- Control stackpanel -->
    <StackPanel Grid.Column="0" Grid.Row="0" Background="#FF2E973C">
      <TextBox>Hae resepti</TextBox>
      <Button x:Name="btnGetRecipes" Content="Hae reseptejä" Click="btnGetRecipes_Click"/>
      <Button x:Name="btnGetTestRecipes" Click="btnGetTestRecipes_Click">Hae testidata</Button>
    </StackPanel>
    
    <!-- Information dockpanel -->
    <DockPanel x:Name="dpList" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Background="#FF2E8D97">
      <TextBox x:Name="tbList"></TextBox>
    </DockPanel>
    
    <!-- Recipe dockpanel -->
    <DockPanel x:Name="dpRecipes" Grid.Column="0" Grid.Row="1" Background="#FFA61818">
      <DataGrid x:Name="dgRecipes" SelectionChanged="DataGrid_SelectionChanged"></DataGrid>
    </DockPanel>
    
    <!-- MessagePanel -->
    <DockPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Background="#FF3486B6">
      <TextBlock></TextBlock>
    </DockPanel>
  </Grid>
</Window>
